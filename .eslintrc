// the following rules must be activated after the code is stable
// - quotes
// - camelcase
// - no-alert
// - no-unused-vars (JSX)
// - handle-callback-err
// - no-shadow
// - comma-spacing
// - no-multi-spaces
// - key-spacing
{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-underscore-dangle": [0]
  },
  "globals": {
    "describe": false,
    "xdescribe": false,
    "it": false,
    "jasmine": true,
    "beforeEach": false,
    "beforeAll": false,
    "expect": false,
    "spyOn": false,
    "afterEach": false
  }
}
